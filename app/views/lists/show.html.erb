<h3><%= @list.name %></h3>

<h5>here's the collection of movies for this list</h5>
<% @list_bookmarks.each do |bookmark| %>
  <p><%= bookmark.movie.title  %></p>
  <p><%= bookmark.comment %></p>
  <%= link_to "Delete #{bookmark.movie.title}", bookmark_path(bookmark),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
<% end %>
