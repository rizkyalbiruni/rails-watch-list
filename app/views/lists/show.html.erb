<h3><%= @list.name %></h3>

<p>here's the collection of movies for this list</p>

<% @list_bookmarks.each do |bookmark| %>
  <p><%= bookmark.movie.title  %></p>
  <%= image_tag(bookmark.movie.poster_url, width:200) %>
  <p><%= bookmark.comment %></p>
  <%= link_to "Delete #{bookmark.movie.title}", bookmark_path(bookmark),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
<% end %>

<p><%= link_to "Add a Bookmark", new_list_bookmark_path(@list) %></p>
